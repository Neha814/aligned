<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c3c3c">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It's a Match"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You and Christina have aligned with each other"
            android:textColor="@android:color/white"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/match_found_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dummy_profile"
                />

            <ImageView
                android:id="@+id/match_found_image1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dummy_profile"/>


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/send_message_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/send_message_background"
                android:gravity="center">

                <ImageView
                    android:id="@+id/message_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_msg" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/message_icon"
                    android:text="Send a Message"
                    android:textSize="20sp"
                    android:textColor="@color/textColorPrimary" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/google_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/send_message_background"
                android:gravity="center">

                <ImageView
                    android:id="@+id/google_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_keep_play" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/google_plus"
                    android:text="Keep Playing"
                    android:textSize="20sp"
                    android:textColor="@color/textColorPrimary" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_friends_talk"
                android:text="Tell Your Friends"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>





    </LinearLayout>

</ScrollView>