<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="#BB000000"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_weight="1.2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Its a match"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="you and elandor have aligned with each other!"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/matched_img"
            android:layout_width="0dp"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/my_img"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.8">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="@drawable/white_box">
            <Button
                android:id="@+id/send_message_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textAllCaps="false"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_msg"
                android:textColor="@color/white"
                android:text="Send a Message"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:layout_below="@+id/ll1"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/white_box">

            <Button
                android:id="@+id/keep_playing_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textAllCaps="false"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_keep_play"
                android:textColor="@color/white"
                android:text="Keep Playing"/>
        </LinearLayout>
        <Button
            android:id="@+id/tell_frnd_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@drawable/ic_friends_talk"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="Tell your friends"/>


    </RelativeLayout>

</LinearLayout>