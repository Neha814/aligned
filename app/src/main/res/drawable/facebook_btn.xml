<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="6dip" />
            <stroke
                android:width="1dip"
                android:color="@color/facebook_dark_blue" />
            <gradient
                android:angle="-90"
                android:startColor="@color/facebook_dark_blue"
                android:endColor="@color/facebook_dark_blue"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="6dip" />
            <stroke
                android:width="1dip"
                android:color="@color/google_red" />
            <solid
                android:color="@color/google_red"/>
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="6dip" />
            <gradient
                android:angle="-90"
                android:startColor="@color/facebook_blue"
                android:endColor="@color/facebook_blue" />
        </shape>
    </item>
</selector>